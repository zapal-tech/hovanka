{
  "name": "hovanka",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "build:api": "turbo build --filter @hovanka/api",
    "dev": "turbo dev",
    "format": "prettier --write \"{apps,packages,scripts}/**/*.{ts,js,json,json5,html,svelte,tsx,jsx,gql,graphql,md,css,scss,sass}\"",
    "lint": "turbo lint",
    "prepare": "husky",
    "start": "turbo start"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "catalog:",
    "@commitlint/config-pnpm-scopes": "catalog:",
    "@zapal/dx": "catalog:",
    "eslint": "catalog:",
    "husky": "catalog:",
    "prettier": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=22"
  }
}
